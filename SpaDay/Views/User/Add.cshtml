@using SpaDay.ViewModels;
@model AddUserViewModel;

<h1> 
    Add User
</h1>
<form asp-controller="User" asp-action="Add" method='post' >
    <div class="form-group">
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" /><br />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input asp-for="Password" /><br />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="VerifyPassword"></label><br />
        <input asp-for="VerifyPassword" /><br />
        <span asp-validation-for="VerifyPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label><br />
        <input asp-for="Email" /><br />
        <span asp-validation-for="Email"></span>
    </div>
    <input type="submit" value="submit" />
</form>

